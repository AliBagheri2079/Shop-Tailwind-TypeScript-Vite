{
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-prettier-scss"
    ],
    "overrides": [
      {
        "files": ["**/*.scss"],
        "customSyntax": "postcss-scss"
      }
    ],
    "rules": {
      "function-parentheses-space-inside": null,
      "no-descending-specificity": null,
      "max-nesting-depth": 2,
      "selector-max-id": 1
    }
  }